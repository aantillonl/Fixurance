<Application
    x:Class="Fixurance.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fixurance">
    <Application.Resources>
        <SolidColorBrush x:Key="MainFontColor" Color="White"/>
        <SolidColorBrush x:Key="ControlBackgroundColor" Color="White"/>
        <x:Double x:Key="MainFontSize">48</x:Double>
        <SolidColorBrush x:Key="MainColor" Color="#008000"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="White"/>
        <SolidColorBrush x:Key="OkButtonColor" Color="Green"/>
        <SolidColorBrush x:Key="CancelButtonColor" Color="Red"/>        
    </Application.Resources>

</Application>
